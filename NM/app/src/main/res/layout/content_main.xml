<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello World!"
                android:gravity="center"
                android:padding="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/notificationGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Group Notification"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="217dp" />

            <Button
                android:id="@+id/Notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Default Notification"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="217dp" />
            <Button
                android:id="@+id/NotificationWithLandingClass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notification LandingClass"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="217dp" />
            <Button
                android:id="@+id/NotificationWithLargeIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notification LargeIcon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="217dp" />
            <Button
                android:id="@+id/NotificationWithAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notification Action"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="217dp" />
            <Button
                android:id="@+id/NotificationWithLargeIconAndAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="setNotification LargeIcon Action"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="217dp" />
            <Button
                android:id="@+id/NotificationWithBodyTextAndActionAndLandingActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notification BodyText Action LandingActivity"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="217dp" />
            <Button
                android:id="@+id/NotificationWithLargeIconAndActionAndLandingActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notification LargeIcon Action LandingActivity"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="217dp" />
            <Button
                android:id="@+id/NotificationWithBigPicture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notification BogPicture"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="217dp" />
            <Button
                android:id="@+id/NotificationWithBigPictureAndActionAndLanding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notification BigPicture Action Landing"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="217dp" />
            <Button
                android:id="@+id/NotificationWithBigPictureAndLandingActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notification BigPicture LandingActivity"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="217dp" />
            <Button
                android:id="@+id/NotificationWithBigText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notification BigText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="217dp" />
            <Button
                android:id="@+id/NotificationWithBigTextAndLargeIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notification BigText LargeIcon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="217dp" />
            <Button
                android:id="@+id/NotificationWithBigTextAndLargeIconAndLandingActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notification BigText LargeIcon LandingActivity"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="217dp" />
            <Button
                android:id="@+id/NotificationInboxWithMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NotificationInbox Message"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="217dp" />
            <Button
                android:id="@+id/NotificationInboxWithMessageAndBigContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NotificationInbox Message BigContent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="217dp" />
            <Button
                android:id="@+id/NotificationInboxWithMessageAndBigContentAndSummaryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NotificationInbox Message BigContent SummaryText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="217dp" />
            <Button
                android:id="@+id/NotificationWithTextAndBigText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notification Text BigText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="217dp" />
            <Button
                android:id="@+id/NotificationWithTextAndBigTextAndBigContentTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notification Text BigText BigContentTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="217dp" />
            <Button
                android:id="@+id/NotificationWithTextAndBigTextAndBigContentTitleSummaryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notification Text BigText BigContentTitle SummaryText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="217dp" />
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>